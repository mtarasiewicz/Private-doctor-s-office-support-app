@model DocHub.Core.Domain.Models.AppointmentDetails
@{
    Layout = "_DashboardLayout";
}
<div class="max-w-lg mx-auto bg-white rounded-md overflow-hidden shadow-md">
    <div class="p-4">
        <h1 class="text-2xl font-semibold mb-4 text-blue-500">Appointment booked</h1>
        <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a asp-controller="Appointments" asp-action="Index" class="inline-flex items-center text-sm font-medium text-gray-600 hover:text-blue-600 dark:text-gray-400">
                        <svg class="w-[12px] h-[12px] text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                            <path d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z"/>
                        </svg>
                        &nbsp; Schedule
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-600 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <p class="ml-1 text-sm font-medium hover:text-blue-700 md:ml-2 text-blue-600">@Model.AppointmentResponse.Start.Value.ToString("dd.MM.yyyy HH:mm") - @Model.AppointmentResponse.End.Value.ToString("HH:mm")</p>
                    </div>
                </li>
            </ol>
        </nav>
        <hr class="bg-gray-50"/>
        <p class="text-gray-700 text-xs font-semibold mt-2">Patient</p>
        <div class="bg-gray-100 border p-2 rounded-md">
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">Numer PESEL:</p>
                @if (Model.PatientResponse.PeselNumber is not null)
                {
                    <p class="text-sm my-auto text-gray-700 font-semibold">
                        @Model.PatientResponse.PeselNumber
                    </p>
                }
                else
                {
                    <p class="text-sm my-auto italic text-gray-500">
                        empty
                    </p>
                }
            </div>
            <hr class="border-dashed border border-gray-600"/>
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">First name & last name:</p>
                <p class="text-sm my-auto text-gray-700 font-semibold">
                    @Model.PatientResponse.FullName
                </p>
            </div>
            <hr class="border-dashed border border-gray-600"/>
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">Phone number:</p>
                @if (Model.PatientResponse.PhoneNumber is not null)
                {
                    <p class="text-sm my-auto text-gray-700 font-semibold">
                        @Model.PatientResponse.PhoneNumber
                    </p>
                }
                else
                {
                    <p class="text-sm my-auto italic text-gray-500">
                        empty
                    </p>
                }
            </div>
            <hr class="border-dashed border border-gray-600"/>
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">Email address:</p>
                <p class="text-sm my-auto text-gray-700 font-semibold">
                    @Model.PatientResponse.Email
                </p>
            </div>
        </div>
        <p class="text-gray-700 text-xs font-semibold mt-2">Appointment</p>
        <div class="bg-gray-100 border p-2 rounded-md">
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">Date:</p>
                <p class="text-sm my-auto text-gray-700 font-semibold">
                    @Model.AppointmentResponse.Start.Value.Date.ToString("dd.MM.yyyy")
                </p>
            </div>
            <hr class="border-dashed border border-gray-600"/>
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">Day of the week:</p>
                <p class="text-sm my-auto text-gray-700 font-semibold">
                    @Model.AppointmentResponse.Start.Value.Date.ToString("dddd")
                </p>
            </div>
            <hr class="border-dashed border border-gray-600"/>
            <div class="flex justify-between">
                <p class="text-gray-600 text-xs font-semibold my-auto">Time:</p>
                <p class="text-sm my-auto text-gray-700 font-semibold">
                    @Model.AppointmentResponse.Start.Value.ToString("HH:mm") - @Model.AppointmentResponse.End.Value.ToString("HH:mm")
                </p>
            </div>
        </div>
        <div class="flex justify-center mt-2">
            <a asp-action="Index" asp-controller="Appointments" class="py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200">Back to schedule</a>
        </div>
    </div>
</div>