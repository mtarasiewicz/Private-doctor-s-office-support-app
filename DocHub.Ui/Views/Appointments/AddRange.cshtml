@model AppointmentAddRangeRequest
<form asp-controller="Appointments" asp-action="AddRange" method="post">
    <div class="max-w-md mx-auto bg-white rounded-md p-8 shadow-md">
        <h1 class="text-2xl font-bold mb-6">Create appointment</h1>

        <!-- Pole tekstowe -->
        <div class="mb-4">
            <label asp-for="StartDate" class="block text-gray-700 text-sm font-bold mb-2">Start</label>
            <input asp-for="StartDate" class="w-full px-3 py-2 border rounded-md text-gray-700 leading-tight focus:outline-none focus:shadow-outline-blue focus:border-blue-300">
            <label asp-for="EndDate" class="block text-gray-700 text-sm font-bold mb-2">End</label>
            <input asp-for="EndDate">
            <label asp-for="Duration" class="block text-gray-700 text-sm font-bold mb-2">Duration</label>
            <input asp-for="Duration">
            <label asp-for="StartHour" class="block text-gray-700 text-sm font-bold mb-2">StartHour</label>
            <input asp-for="StartHour">
            <label asp-for="EndHour" class="block text-gray-700 text-sm font-bold mb-2">EndHour</label>
            <input asp-for="EndHour">
        </div>

        <!-- Przycisk -->
        <div class="flex items-center justify-center">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue active:bg-blue-800">Create</button>
        </div>
    </div>
</form>