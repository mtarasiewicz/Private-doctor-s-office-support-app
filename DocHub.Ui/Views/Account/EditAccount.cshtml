@using DocHub.Core.DTO
@model EditAccountRequest
@{
}
<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded shadow-md w-96">
        <h2 class="text-2xl font-semibold mb-6">Edit @Model.FirstName @Model.LastName</h2>

        <form asp-action="EditAccount" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="mb-4">
                <label asp-for="FirstName" class="block text-gray-600 text-sm font-medium mb-2"></label>
                <input asp-for="FirstName" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" required />
                <span asp-validation-for="FirstName" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="LastName" class="block text-gray-600 text-sm font-medium mb-2"></label>
                <input asp-for="LastName" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" required />
                <span asp-validation-for="LastName" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-600 text-sm font-medium mb-2"></label>
                <input asp-for="Email" type="email" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" required />
                <span asp-validation-for="Email" class="text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PhoneNumber" class="block text-gray-600 text-sm font-medium mb-2"></label>
                <input asp-for="PhoneNumber" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" required />
                <span asp-validation-for="PhoneNumber" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="PeselNumber" class="block text-gray-600 text-sm font-medium mb-2"></label>
                <input asp-for="PeselNumber" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" required />
                <span asp-validation-for="PeselNumber" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="City" class="block text-gray-600 text-sm font-medium mb-2"></label>
                <input asp-for="City" class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500" required />
                <span asp-validation-for="City" class="text-red-500"></span>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue">
                Update
            </button>
        </form>
    </div>
    @section scripts
        {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    }

</div>