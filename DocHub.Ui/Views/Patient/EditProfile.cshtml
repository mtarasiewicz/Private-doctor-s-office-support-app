@using DocHub.Core.DTO;
@model PatientUpdateRequest

@{
    Layout = "_DashboardLayout";
    ViewBag.CurrentUrl = "dashboard/profile";
    ViewBag.Title = "Edit profile";
}

<div class="max-w-2xl mx-auto bg-white p-8 shadow-lg rounded-lg">
    <h1 class="text-2xl font-semibold mb-4 text-blue-500">Profil</h1>
    <form asp-controller="Patient" asp-action="EditProfile" method="post">
        <input type="hidden" asp-for="Id"/>
        <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a asp-controller="Dashboard" asp-action="Index" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400">
                        <svg class="w-[12px] h-[12px] text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                            <path d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z"/>
                        </svg>
                        &nbsp; Dashbaord
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <p class="ml-1 text-sm font-medium text-blue-600 hover:text-blue-600 md:ml-2">Profil</p>
                    </div>
                </li>
            </ol>
        </nav>
        <div class="border-b border-gray-200 my-4"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h2 class="text-lg font-semibold mb-4">Dane osobowe</h2>
                <div>
                    <label asp-for="FirstName" class="text-sm text-gray-700">First name</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border rounded-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                            <svg class="w-4 h-4 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-2 3h4a4 4 0 0 1 4 4v2H1v-2a4 4 0 0 1 4-4Z"/>
                            </svg>
                        </span>
                        <input asp-for="FirstName" class="rounded-none rounded-e-lg bg-white border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    </div>
                    <span asp-validation-for="FirstName" class="text-xs text-red-600"></span>
                </div>
                <div>
                    <label asp-for="LastName" class="text-sm text-gray-700">Last name</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border rounded-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                            <svg class="w-4 h-4 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-2 3h4a4 4 0 0 1 4 4v2H1v-2a4 4 0 0 1 4-4Z"/>
                            </svg>
                        </span>
                        <input asp-for="LastName" class="rounded-none rounded-e-lg bg-white border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    </div>
                    <span asp-validation-for="LastName" class="text-xs text-red-600"></span>
                </div>
                <div>
                    <label asp-for="PeselNumber" class="text-sm text-gray-700">PESEL</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border rounded-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                            <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 22 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 10a28.076 28.076 0 0 1-1.091 9M6.231 2.37a8.994 8.994 0 0 1 12.88 3.73M1.958 13S2 12.577 2 10a8.949 8.949 0 0 1 1.735-5.307m12.84 3.088c.281.706.426 1.46.425 2.22a30 30 0 0 1-.464 6.231M5 10a6 6 0 0 1 9.352-4.974M3 19a5.964 5.964 0 0 1 1.01-3.328 5.15 5.15 0 0 0 .786-1.926m8.66 2.486a13.96 13.96 0 0 1-.962 2.683M6.5 17.336C8 15.092 8 12.846 8 10a3 3 0 1 1 6 0c0 .75 0 1.521-.031 2.311M11 10.001c0 3 0 6-2 9"/>
                            </svg>
                        </span>
                        <input asp-for="PeselNumber" class="rounded-none rounded-e-lg bg-white border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                    </div>
                    <span asp-validation-for="PeselNumber" class="text-xs text-red-600"></span>
                </div>
                <div>
                    <label asp-for="DateOfBirth" class="text-sm text-gray-700">Date of birth</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border rounded-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                           <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                               <path fill="currentColor" d="M6 1a1 1 0 0 0-2 0h2ZM4 4a1 1 0 0 0 2 0H4Zm7-3a1 1 0 1 0-2 0h2ZM9 4a1 1 0 1 0 2 0H9Zm7-3a1 1 0 1 0-2 0h2Zm-2 3a1 1 0 1 0 2 0h-2ZM1 6a1 1 0 0 0 0 2V6Zm18 2a1 1 0 1 0 0-2v2ZM5 11v-1H4v1h1Zm0 .01H4v1h1v-1Zm.01 0v1h1v-1h-1Zm0-.01h1v-1h-1v1ZM10 11v-1H9v1h1Zm0 .01H9v1h1v-1Zm.01 0v1h1v-1h-1Zm0-.01h1v-1h-1v1ZM10 15v-1H9v1h1Zm0 .01H9v1h1v-1Zm.01 0v1h1v-1h-1Zm0-.01h1v-1h-1v1ZM15 15v-1h-1v1h1Zm0 .01h-1v1h1v-1Zm.01 0v1h1v-1h-1Zm0-.01h1v-1h-1v1ZM15 11v-1h-1v1h1Zm0 .01h-1v1h1v-1Zm.01 0v1h1v-1h-1Zm0-.01h1v-1h-1v1ZM5 15v-1H4v1h1Zm0 .01H4v1h1v-1Zm.01 0v1h1v-1h-1Zm0-.01h1v-1h-1v1ZM2 4h16V2H2v2Zm16 0h2a2 2 0 0 0-2-2v2Zm0 0v14h2V4h-2Zm0 14v2a2 2 0 0 0 2-2h-2Zm0 0H2v2h16v-2ZM2 18H0a2 2 0 0 0 2 2v-2Zm0 0V4H0v14h2ZM2 4V2a2 2 0 0 0-2 2h2Zm2-3v3h2V1H4Zm5 0v3h2V1H9Zm5 0v3h2V1h-2ZM1 8h18V6H1v2Zm3 3v.01h2V11H4Zm1 1.01h.01v-2H5v2Zm1.01-1V11h-2v.01h2Zm-1-1.01H5v2h.01v-2ZM9 11v.01h2V11H9Zm1 1.01h.01v-2H10v2Zm1.01-1V11h-2v.01h2Zm-1-1.01H10v2h.01v-2ZM9 15v.01h2V15H9Zm1 1.01h.01v-2H10v2Zm1.01-1V15h-2v.01h2Zm-1-1.01H10v2h.01v-2ZM14 15v.01h2V15h-2Zm1 1.01h.01v-2H15v2Zm1.01-1V15h-2v.01h2Zm-1-1.01H15v2h.01v-2ZM14 11v.01h2V11h-2Zm1 1.01h.01v-2H15v2Zm1.01-1V11h-2v.01h2Zm-1-1.01H15v2h.01v-2ZM4 15v.01h2V15H4Zm1 1.01h.01v-2H5v2Zm1.01-1V15h-2v.01h2Zm-1-1.01H5v2h.01v-2Z"/>
                             </svg>
                        </span>
                        <input name="DateOfBirth" datepicker datepicker-orientation="bottom right"  datepicker-format="mm.dd.yyyy" class="rounded-none rounded-e-lg bg-white border text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm border-gray-300 p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="@DateTime.Today.Date.ToString("dd.MM.yyyy")">
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-xs text-red-600"></span>
                </div>
            </div>


            <div>
                <h2 class="text-lg font-semibold mb-4">Contact data</h2>
                <div>
                    <label asp-for="Email" class="block text-gray-600 text-sm">Email address</label>
                    <input asp-for="Email" class="w-full border p-2 rounded-md"/>
                    <span asp-validation-for="Email" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="PhoneNumber" class="block text-gray-600 text-sm">Phone number</label>
                    <input asp-for="PhoneNumber" class="w-full border p-2 rounded-md"/>
                    <span asp-validation-for="PhoneNumber" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="City" class="block text-gray-600 text-sm">City</label>
                    <input asp-for="City" class="w-full border p-2 rounded-md"/>
                    <span asp-validation-for="City" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="PostalCode" class="block text-gray-600 text-sm">Postal code</label>
                    <input asp-for="PostalCode" class="w-full border p-2 rounded-md"/>
                    <span asp-validation-for="PostalCode" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="Address" class="block text-gray-600 text-sm">Adress</label>
                    <input asp-for="Address" class="w-full border p-2 rounded-md"/>
                    <span asp-validation-for="Address" class="text-red-500"></span>
                </div>
            </div>
        </div>

        <div class="border-b border-gray-400 my-4"></div>
        <div class="mb-4">
            <h2 class="text-lg font-semibold">Additional data</h2>
        </div>
        <div class="mb-4">
            <label asp-for="HistoryOfDiseases" class="block text-gray-600 text-sm">History of diseases</label>
            <textarea asp-for="HistoryOfDiseases" class="w-full border p-2 rounded-md"></textarea>
            <span asp-validation-for="HistoryOfDiseases" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Allergies" class="block text-gray-600 text-sm">Allergies</label>
            <textarea asp-for="Allergies" class="w-full border p-2 rounded-md"></textarea>
            <span asp-validation-for="Allergies" class="text-sm text-red-500"></span>
        </div>
        <div>
            <label asp-for="TakenMedications" class="block text-gray-600 text-sm">Taken medications</label>
            <textarea asp-for="TakenMedications" class="w-full border p-2 rounded-md"></textarea>
            <span asp-validation-for="TakenMedications" class="text-sm text-red-500"></span>
        </div>

        <div class="mt-6">
            <button type="submit" class="bg-blue-500 text-white font-medium text-base px-4 py-2 rounded-md shadow-md border border-gray-200 hover:bg-blue-700 transition duration-300">Zapisz</button>
            <a asp-controller="Dashboard" asp-action="Index" class="bg-white text-gray-700 font-medium text-base px-4 py-2 rounded-md shadow-md border border-gray-200 hover:bg-gray-200 transition duration-300">Anuluj</a>
        </div>
    </form>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}