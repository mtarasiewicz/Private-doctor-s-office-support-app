@using DocHub.Core.DTO;
@model PatientUpdateRequest

@{
    Layout = "_DashboardLayout";
    ViewBag.CurrentUrl = "dashboard/profile";
    ViewBag.Title = "Edit profile";
}

<div class="max-w-2xl mx-auto bg-white p-8 shadow-lg rounded-lg">
    <h1 class="text-2xl font-semibold mb-4 text-blue-500">Profil</h1>
    <form asp-controller="Patient" asp-action="EditProfile" method="post">
        <input type="hidden" asp-for="Id" />
        <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a asp-controller="Dashboard" asp-action="Index" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400">
                        <svg class="w-[12px] h-[12px] text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                            <path d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z" />
                        </svg>
                        &nbsp; Dashbaord
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
                        </svg>
                        <p class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">Profil</p>
                    </div>
                </li>
            </ol>
        </nav>
        <div class="border-b border-gray-400 my-4"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h2 class="text-lg font-semibold mb-4">Dane osobowe</h2>
                <div>
                    <label asp-for="FirstName" class="block text-gray-600 text-sm">Name</label>
                    <input asp-for="FirstName" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="LastName" class="block text-gray-600 text-sm">Last namee</label>
                    <input asp-for="LastName" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="PeselNumber" class="block text-gray-600 text-sm">PESEL</label>
                    <input asp-for="PeselNumber" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="PeselNumber" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="DateOfBirth" class="block text-gray-600 text-sm">Date of birth</label>
                    <input asp-for="DateOfBirth" type="date" class="w-full border p-2 rounded-md">
                    <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
                </div>
            </div>


            <div>
                <h2 class="text-lg font-semibold mb-4">Contact data</h2>
                <div>
                    <label asp-for="Email" class="block text-gray-600 text-sm">Email address</label>
                    <input asp-for="Email" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="Email" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="PhoneNumber" class="block text-gray-600 text-sm">Phone number</label>
                    <input asp-for="PhoneNumber" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="City" class="block text-gray-600 text-sm">City</label>
                    <input asp-for="City" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="City" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="PostalCode" class="block text-gray-600 text-sm">Postal code</label>
                    <input asp-for="PostalCode" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="PostalCode" class="text-red-500"></span>
                </div>
                <div>
                    <label asp-for="Address" class="block text-gray-600 text-sm">Adress</label>
                    <input asp-for="Address" class="w-full border p-2 rounded-md" />
                    <span asp-validation-for="Address" class="text-red-500"></span>
                </div>
            </div>
        </div>

        <div class="border-b border-gray-400 my-4"></div>
        <div class="mb-4">
            <h2 class="text-lg font-semibold">Additional data</h2>
        </div>
        <div class="mb-4">
            <label asp-for="HistoryOfDiseases" class="block text-gray-600 text-sm">History of diseases</label>
            <textarea asp-for="HistoryOfDiseases" class="w-full border p-2 rounded-md"></textarea>
            <span asp-validation-for="HistoryOfDiseases" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Allergies" class="block text-gray-600 text-sm">Allergies</label>
            <textarea asp-for="Allergies" class="w-full border p-2 rounded-md"></textarea>
            <span asp-validation-for="Allergies" class="text-sm text-red-500"></span>
        </div>
        <div>
            <label asp-for="TakenMedications" class="block text-gray-600 text-sm">Taken medications</label>
            <textarea asp-for="TakenMedications" class="w-full border p-2 rounded-md"></textarea>
            <span asp-validation-for="TakenMedications" class="text-sm text-red-500"></span>
        </div>

        <div class="mt-6">
            <button type="submit" class="bg-blue-500 text-white font-medium text-base px-4 py-2 rounded-md shadow-md border border-gray-200 hover:bg-blue-700 transition duration-300">Zapisz</button>
            <a asp-controller="Dashboard" asp-action="Index" class="bg-white text-gray-700 font-medium text-base px-4 py-2 rounded-md shadow-md border border-gray-200 hover:bg-gray-200 transition duration-300">Anuluj</a>
        </div>
    </form>
</div>
@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    }

